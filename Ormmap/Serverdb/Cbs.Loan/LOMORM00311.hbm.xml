  <query name="LOMORM00311.SelectLegalCaseAccountByAcctNoForPersonalLoan">
    select new personalLoansDto
    (
    l.ACNo
    )
    from LOMORM00311 as l
    where l.ACNo = :acctNo
    and l.Active = true 
    and l.LegalCase = true
  </query>

