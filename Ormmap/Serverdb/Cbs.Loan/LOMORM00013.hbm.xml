  <!--//LegalDAO.SelectLegalInfoByLoanNo//-->
  <query name="LegalDAO.SelectLegalInfoByLoanNo">
    select new LegalDto(
    lg.Lno,
    lg.AcctNo,
    lg.AcType,
    lg.Bal,
    lg.OldInt,
    lg.OldScharge,
    lg.OldExtra,
    lg.IntRate,
    lg.SourceBr,
    lg.Cur,
    ln.LegaLawer,
    ln.SAmount
    )
    from LOMORM00013 as lg
    inner join lg.Loans ln
    with ln.Active = true
    where lg.Lno = ln.Lno
    and lg.SourceBr=:sourceBr
    and lg.Lno =:lno
    and lg.Active = true
    order by lg.ReleaseDate asc
  </query>
	
